<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFF0F5"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="시드니 오페라 하우스"
            android:textColor="#000000"
            android:textSize="45sp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="350dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:layout_marginTop="10dp"
                android:src="@drawable/auspot1" />

            <TextView
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"

                android:text="시드니 오페라 하우스는 오스트레일리아 뉴사우스웨일스주 시드니에 있는 공연장이다. 1547석의 오페라 극장과 2679석의 음악당을 비롯해 여러 개의 극장, 전시관, 도서관 등이 있다."
                android:textSize="25sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="#000000"
                android:text="주소: Bennelong Point, Sydney NSW 2000 오스트레일리아"
                android:textSize="23sp" />
            <Button
                android:id="@+id/aubtn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#ADD8E6"
                android:textSize="25dp"
                android:layout_marginTop="20dp"
                android:text="공연 일정 >"
                />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="American Psycho: The Musical\n2021년 6월 3일 (목) 오후 8:00
                                \n\nBadu Gili: Winter Nights\n2021년 6월 8일 화요일 오후 5:40
                             \n\nSandsong: Stories from the Great Sandy Desert\n2021년 6월 12일 토요일 오후 1:30"
                android:textSize="25sp"
                android:visibility="gone"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:textColor="#000000"
                android:text="☎: +61 2 9250 7111"
                android:textSize="25sp" />

            <ImageButton
                android:layout_width="400dp"
                android:layout_height="300dp"
                android:scaleType="fitXY"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:src="@drawable/aumap"
                />




        </LinearLayout>
    </LinearLayout>
</ScrollView>