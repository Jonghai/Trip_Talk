<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFF0F5">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="미국 먹거리"

            android:textColor="#000000"
            android:textSize="35sp" />
        <View
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="5dp"
            android:background="#B2EBF4"/>
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/amfood1"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#000000"
            android:text=" cheeseburger 치즈버거\n 바삭하게 구워진 베이컨과 소고기패티와 치즈가 들어있는 치즈버거"
            android:textSize="20sp"/>
        <View
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="5dp"
            android:background="#B2EBF4"/>
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/amfood2"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:text="Hot Dogs\n평소에도 먹을 수 있는 핫도그이지만 재료에 \n따라서 맛이 달라지는 핫도그"
            android:textSize="20sp"/>
        <View
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="5dp"
            android:background="#B2EBF4"/>
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/amfood3"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#000000"
            android:text=" Philly Cheese Steak 필리치즈 스테이크\n 필라델피아의 대표음식이라는 필리치즈 스테이크 볶은 얇게 썬 고기와 녹인 치즈를 긴 롤에 포장한  샌드위치"
            android:textSize="20sp"/>
        <View
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="5dp"
            android:background="#B2EBF4"/>
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/amfood4"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#000000"
            android:text="Nachos 나쵸\n옥수수로 만든 멕시코 과자\n일반적으로 토르티야 칩이나 토토포에 녹인 치즈를 부워 먹는다. "
            android:textSize="20sp"/>
        <View
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="5dp"
            android:background="#B2EBF4"/>
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/amfood5"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#000000"
            android:text="Chicago-Style Pizza 시카고피자\n속이 꽉찬 스터프트 피자나 두께가 두꺼운 딥디시 피자"
            android:textSize="20sp"/>
        <View
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="5dp"
            android:background="#B2EBF4"/>
    </LinearLayout>
</ScrollView>